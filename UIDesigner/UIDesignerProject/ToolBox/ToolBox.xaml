<UserControl x:Class="DrawArea.ToolBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Width="150">
    <StackPanel>
        <Label Background="#FF293A56" Foreground="White">Toolbox</Label>
        <RadioButton GroupName="UIElement" IsChecked="True" Content="Input Block" Margin="1,0,5,0"/>
        <RadioButton GroupName="UIElement" Content="Output Block" Margin="1,0,5,0"/>
        <RadioButton GroupName="UIElement" Content="Pause Block" Margin="1,0,5,0"/>
    </StackPanel>
</UserControl>
